@page
@model DisasterAlleviationFoundation.Pages.DisplayModel
@{
    ViewData["Title"] = "Display";
}

<html>
<head>
    <style>
        #main {
            margin-top: 25px;
            width: 80%;
            margin: 10px 5%;
            padding: 10px 5%;
        }

        input {
            width: 40%;
            border: none;
            border-bottom: 3px solid purple;
            margin: 20px 2%;
        }

        #capture-btn {
            width: 100%;
            height: 40px;
            background: orange;
            color: white;
            border-bottom: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background:purple;">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index" style="color:white;">DisasterALLeviationFoundation</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item">

                            <a class="nav-link text-warning" asp-area="" asp-page="/forMonetary">Monetary Donations</a>
                        </li>

                        <li class="nav-item">

                            <a class="nav-link text-warning" asp-area="" asp-page="/Goods">Goods Donations</a>
                        </li>

                        <li class="nav-item">

                            <a class="nav-link text-warning" asp-area="" asp-page="/Disaster">DIsaster</a>
                        </li>


                        <li class="nav-item">

                            <a class="nav-link text-warning" asp-area="" asp-page="/Display">Display</a>
                        </li>
                    </ul>
            </div>
        </div>
    </nav>


    <section id="display">
        <h1>All incoming monetary donations</h1>
        <br><br>
        <table class="table table-responsive" border="1">
            <thead>
                <tr>
                    <td>Donar</td>
                    <td>Date</td>
                    <td>Amount</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.monetaryList)
                {
                    <tr>
                        <td>@item.userName</td>
                        <td>@item.date</td>
                        <td>@item.amount</td>
                    </tr>
                }
            </tbody>
        </table>

        <h1>All incoming goods donations</h1>
        <br><br>
        <table class="table table-responsive bg-dark" border="1">
            <thead>
                <tr>
                    <td>Donar</td>
                    <td>Date</td>
                    <td>No. Of Items</td>
                    <td>Category</td>
                    <td>Description</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.goodsList)
                {
                    <tr>
                        <td>@item.userName</td>
                        <td>@item.date</td>
                        <td>@item.numberOfItems</td>
                        <td>@item.category</td>
                        <td>@item.description</td>
                    </tr>
                }
            </tbody>
        </table>

        <h1>All Recorded Disaster's</h1>
        <br><br>
        <table class="table table-responsive bg-dark" border="1">
            <thead>
                <tr>
                    <td>Start Date</td>
                    <td>End Date</td>
                    <td>Location</td>
                    <td>Description</td>
                    <td>Aid</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.disasterList)
                {
                    <tr>
                        <td>@item.startDate</td>
                        <td>@item.endDate</td>
                        <td>@item.location</td>
                        <td>@item.description</td>
                        <td>@item.aid</td>
                    </tr>
                }
            </tbody>
        </table>

        <h1>All Allocated Goods</h1>
        <br><br>
        <table class="table table-responsive bg-dark" border="1">
            <thead>
                <tr>
                    <td>Disaster</td>
                    <td>Goods</td>
                    <td>Number of Items</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.allocateGoodsList)
                {
                    <tr>
                        <td>@item.disaster</td>
                        <td>@item.goods</td>
                        <td>@item.items</td>
                    </tr>
                }
            </tbody>
        </table>

        <h1>All Allocated Money</h1>
        <br><br>
        <table class="table table-responsive bg-dark" border="1">
            <thead>
                <tr>
                    <td>Disaster</td>
                    <td>Date</td>
                    <td>Amount</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.allocateMoneyList)
                {
                    <tr>
                        <td>@item.disaster</td>
                        <td>@item.date</td>
                        <td>R @item.amount</td>
                    </tr>
                }
            </tbody>
        </table>

        <h1>All Purchased Items</h1>
        <br><br>
        <table class="table table-responsive bg-dark" border="1">
            <thead>
                <tr>
                    <td>Date</td>
                    <td>Number of Items</td>
                    <td>Price per item</td>
                    <td>Total Price</td>
                    <td>Category</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.purchasesList)
                {
                    <tr>
                        <td>@item.date</td>
                        <td>@item.items</td>
                        <td>R @item.pricePerItem</td>
                        <td>R @item.totalPrice</td>
                        <td> @item.category</td>
                    </tr>
                }
            </tbody>
        </table>



    </section>
</body>
</html>
