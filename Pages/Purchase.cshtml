@page
@model DisasterAlleviationFoundation.Pages.PurchaseModel
@{
    ViewData["Title"] = "Purchase";
}

<html>
<head>
    <style>
        #main {
            margin-top: 25px;
            width: 80%;
            margin: 10px 5%;
            padding: 10px 5%;
        }

        input {
            width: 40%;
            border: none;
            border-bottom: 3px solid purple;
            margin: 20px 2%;
        }

        #capture-btn {
            width: 100%;
            height: 40px;
            background: orange;
            color: white;
            border-bottom: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background:purple;">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index" style="color:white;">DisasterALLeviationFoundation</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-warning" asp-area="" asp-page="/Index">Home</a>
                    </li>

                    <li class="nav-item">

                        <a class="nav-link text-warning" asp-area="" asp-page="/forMonetary">Monetary Donations</a>
                    </li>

                    <li class="nav-item">

                        <a class="nav-link text-warning" asp-area="" asp-page="/Goods">Goods Donations</a>
                    </li>

                    <li class="nav-item">

                        <a class="nav-link text-warning" asp-area="" asp-page="/Disaster">DIsaster</a>
                    </li>


                    <li class="nav-item">

                        <a class="nav-link text-warning" asp-area="" asp-page="/Display">Display</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section>
        <h1>Goods Pruchase</h1>
        <p>On this page you can record any goods purchased. To capture goods please click here <a asp-page="Goods">Click me</a> </p><br>
        <form method="post">
            <label>Select the category</label> <br>
            <select id="category" asp-for="myPurchase.category">
                @foreach (var item in Model.goods)
                {
                    <option value="@item.goodsName">@item.goodsName</option>
                }
            </select><br><br>
            <label>Enter the date for the Goods Purchase</label><br>
            <input type="date" asp-for="myPurchase.date" placeholder="date" required /> <br /><br />
            <label>Enter the number of items</label><br>
            <input type="number" id="numberOfItems" asp-for="myPurchase.numberOfItems" onfocus="calculateAndDisplay()" placeholder="number of items" required /> <br /><br />
            <div class="row">
                <div class="col-md-6">
                    <label>Enter the price of one unit of the items</label><br>
                    <input type="number" id="pricePerUnit" asp-for="myPurchase.pricePerUnit" onfocus="calculateAndDisplay()" placeholder="Price per Unit" required /> <br /><br />
                </div>
                
            </div>
            <label>Enter a Desciption of each item</label><br><br>
            <textarea style="color:black;" type="text" asp-for="myPurchase.description" placeholder="desc" cols="70" rows="10" required></textarea>

            <input type="submit" /> <br />

        </form>
    </section>

   
</body>
</html>

