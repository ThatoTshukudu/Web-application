@page
@model DisasterAlleviationFoundation.Pages.allocateMoneyModel
@{
    ViewData["Title"] = "allocateMoney";
}

<html>
<head>
    <style>
        #main {
            margin-top: 25px;
            width: 80%;
            margin: 10px 5%;
            padding: 10px 5%;
        }

        input {
            width: 40%;
            border: none;
            border-bottom: 3px solid purple;
            margin: 20px 2%;
        }

        #capture-btn {
            width: 100%;
            height: 40px;
            background: orange;
            color: white;
            border-bottom: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background:purple;">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index" style="color:white;">DisasterALLeviationFoundation</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item">

                            <a class="nav-link text-warning" asp-area="" asp-page="/forMonetary">Monetary Donations</a>
                        </li>

                        <li class="nav-item">

                            <a class="nav-link text-warning" asp-area="" asp-page="/Goods">Goods Donations</a>
                        </li>

                        <li class="nav-item">

                            <a class="nav-link text-warning" asp-area="" asp-page="/Disaster">DIsaster</a>
                        </li>


                        <li class="nav-item">

                            <a class="nav-link text-warning" asp-area="" asp-page="/Display">Display</a>
                        </li>
                    </ul>
            </div>
        </div>
    </nav>

    <section id="allocationMonetary">
        <h1>Monetary Allocation</h1>
        <p>In this area you will be able to capture the Monetary Details to the system, Please make sure you enter the correct values. </p><br>

        <form method="post">
            <label>Select the disaster for which you want to donate</label>
            <select class="form-control" asp-for="myAllo.disaster" required>
                @foreach (var item in Model.myList)
                {
                    <option value="@item.location">@item.location @item.description</option>
                }
            </select> <br />

            <label>Enter the date for the donation</label>
            <input type="date" asp-for="myAllo.date" required /> <br />

            <label>Enter the amount allocated to the disaster</label>
            <input id="amount" type="number" asp-for="myAllo.amount" required /> <br />

            <input type="submit" onclick="checkBalance()" />
        </form>
    </section>

    <script>
        function checkBalance() {
            var a = document.getElementById("amount");
            if (@Model.total < a.value) {
                alert("You dont have the funds");
            }
        }
    </script>

</body>
</html>

